,"zeroPoint":false,"metadata":[]},{"id":"7047e0fb-5642-4d0d-a48a-cf60f6041861","type":"codex/document-reference","start":1143,"end":1143,"value":"8780f519-4d9f-45fd-8fde-a18cb11cf1a2","zeroPoint":true,"metadata":[]},{"id":"a3015bc9-ab6d-4fe6-825d-b7777746ec83","type":"codex/entity-reference","start":1148,"end":1150,"value":"a3fed3ec-1814-4027-a2d5-ac598b2fcb6f","zeroPoint":false,"metadata":[]}],"blockProperties":[]},{"id":"67b14a46-896d-4ab6-8592-2ad9b585f273","type":"standoff-editor-block","text":"Your MICHELAGNIOLO,","standoffProperties":[{"id":"fdd95f5b-84db-47b5-a7d7-e025e6efc56f","type":"tei/textstructure/signed","start":0,"end":17,"value":null,"zeroPoint":false,"metadata":[]},{"id":"8ac69653-08e4-419c-8ae3-546cafeec6e8","type":"codex/entity-reference","start":0,"end":3,"value":"21671569-3eea-412b-85cc-08f659f58019","zeroPoint":false,"metadata":[]},{"id":"e90f5e1e-c32d-4593-816c-f51718a89c89","type":"tei/core/name","start":5,"end":17,"value":null,"zeroPoint":false,"metadata":[]},{"id":"6808a261-b9ed-4038-b54f-bacaa4342da6","type":"codex/entity-reference","start":5,"end":17,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]}],"blockProperties":[]},{"id":"4db32d10-257b-4fc5-99a7-080146d30bd5","type":"standoff-editor-block","text":"Sculptor, in Rome.","standoffProperties":[{"id":"3e1ca58c-458e-4a7c-be48-3035031ba3f9","type":"block/font/size","start":0,"end":17,"value":"0.8em","zeroPoint":false,"metadata":[]},{"id":"1c2c46f5-7914-423c-b61e-4aa8b1a679b2","type":"codex/entity-reference","start":13,"end":16,"value":"501a8a32-2c8a-4934-9060-8c7e36339f0f","zeroPoint":false,"metadata":[]}],"blockProperties":[{"id":"3e1ca58c-458e-4a7c-be48-3035031ba3f9","type":"block/font/size","value":"0.8em","metadata":[]}]},{"id":"b023bb5c-4ccb-4184-ab75-ed85f6ffa9e5","type":"standoff-editor-block","text":"[P.S.]\u00A0\u2014\u00A0Let me have the copy of that letter in the exact form you desire, and I will send it you without delay. Then if you will take it to the Spedalingo I shall be much obliged, for he will see that, come what may, we intend to buy something.","standoffProperties":[{"id":"80f4879c-676e-487b-9408-525334b118e5","type":"tei/textstructure/postscript","start":0,"end":244,"value":null,"zeroPoint":false,"metadata":[]},{"id":"1710bf46-a672-4c57-aa8b-fd16528fb42e","type":"codex/entity-reference","start":13,"end":14,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"37cc461e-bd63-4858-9375-54b8ddcc0097","type":"codex/entity-reference","start":63,"end":65,"value":"21671569-3eea-412b-85cc-08f659f58019","zeroPoint":false,"metadata":[]},{"id":"877c2126-683b-4819-b2ef-3869001f817e","type":"codex/entity-reference","start":79,"end":79,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"2ec6e8fc-4133-4c7c-8d5c-ccc4bf3136a7","type":"codex/entity-reference","start":94,"end":96,"value":"21671569-3eea-412b-85cc-08f659f58019","zeroPoint":false,"metadata":[]},{"id":"e5243574-a180-414f-9afe-140cafa49aa8","type":"codex/entity-reference","start":121,"end":123,"value":"21671569-3eea-412b-85cc-08f659f58019","zeroPoint":false,"metadata":[]},{"id":"5cafd3f6-8e36-4ea0-ad7e-fc1d2bdf2551","type":"codex/entity-reference","start":145,"end":154,"value":"a1d04804-02e0-4be2-9a08-7ce1bedcb638","zeroPoint":false,"metadata":[]},{"id":"b504f057-5d4f-4214-afe8-dc20b334ddbd","type":"codex/entity-reference","start":156,"end":156,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"1fb71eba-bfd6-401a-9d98-b343e02dc888","type":"codex/entity-reference","start":185,"end":186,"value":"a1d04804-02e0-4be2-9a08-7ce1bedcb638","zeroPoint":false,"metadata":[]}],"blockProperties":[{"id":"80f4879c-676e-487b-9408-525334b118e5","type":"tei/textstructure/postscript","value":null,"metadata":[]}]}]}