 on.","standoffProperties":[{"id":"2c45ab7c-919a-40fc-bfa3-f6115cad3379","type":"codex/entity-reference","start":3,"end":5,"value":"21671569-3eea-412b-85cc-08f659f58019","zeroPoint":false,"metadata":[]},{"id":"b7cfe7fc-4ebc-4df3-a17f-f5dd1d848bc8","type":"codex/entity-reference","start":39,"end":48,"value":"a1d04804-02e0-4be2-9a08-7ce1bedcb638","zeroPoint":false,"metadata":[]},{"id":"808ec9ae-f0b1-464b-9143-de9fd8ce0b69","type":"codex/entity-reference","start":58,"end":60,"value":"a1d04804-02e0-4be2-9a08-7ce1bedcb638","zeroPoint":false,"metadata":[]},{"id":"88122dcd-42df-4d71-86f7-5e077b1ed116","type":"codex/entity-reference","start":104,"end":105,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"78d6a9a7-d0c5-41ff-b3cf-b9682c76f7bb","type":"codex/entity-reference","start":130,"end":146,"value":"77d2f878-4cb2-4d3f-ad10-628affcaffd2","zeroPoint":false,"metadata":[]},{"id":"8b9ef30b-d398-48a7-904e-f525f2e67adb","type":"codex/entity-reference","start":162,"end":162,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"3cb9e52b-018f-4f96-827d-5dbf33e10a7a","type":"codex/entity-reference","start":202,"end":203,"value":"77d2f878-4cb2-4d3f-ad10-628affcaffd2","zeroPoint":false,"metadata":[]},{"id":"bd67a2e7-0f77-464e-8072-99760d9ff469","type":"codex/entity-reference","start":232,"end":233,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"11e59b6d-5025-41c8-8700-2932b6106df3","type":"codex/entity-reference","start":240,"end":240,"value":"add92e01-cefe-4f13-94dd-f00eb82155b0","zeroPoint":false,"metadata":[]},{"id":"4fabfbfe-c80b-41d3-a81c-11909e2a3eaf","type":"codex/entity-reference","start":250,"end":251,"value":"77d2f878-4cb2-4d3f-ad10-628affcaffd2","zeroPoint":false,"metadata":[]},{"id":"2c493273-53ec-4c22-8380-ce45c18edb45","type":"codex/entity-reference","start":267,"end":268,"value":"0c663cc2-dd9f-40ce-b17b-734e41b369ef","zeroPoint":false,"metadata":[]},{"id":"b53d